<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin" 
    
    >

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" 
        android:layout_marginTop="70dp"
        android:layout_marginLeft="30dp">


    <TextView
        android:id="@+id/username"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/userlogin"
        android:layout_marginTop="36dp"
        android:text="Username：" />

    <EditText
        android:id="@+id/editname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/userlogin"
        android:layout_alignBottom="@+id/username"
        android:layout_toRightOf="@+id/username"
        android:ems="8" />

    <TextView
        android:id="@+id/userpasswd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/username"
        android:layout_marginTop="36dp"
        android:text="Password：" />

    <EditText
        android:id="@+id/editpasswd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/username"
        android:layout_alignBottom="@+id/userpasswd"
        android:layout_toRightOf="@+id/userpasswd"
        android:layout_alignLeft="@+od/editname"
        android:ems="8" />

    <Button
        android:id="@+id/btlogin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/userpasswd"
        android:layout_below="@+id/userpasswd"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="36dp"
        android:text="Sign in" />

    <Button
        android:id="@+id/btregister"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/btlogin"
        android:layout_marginLeft="30dp"
        android:layout_toRightOf="@+id/btlogin"
        android:text="Sign up" />
    
    </RelativeLayout>

</RelativeLayout>